  </section>

  <div class="text-center mt-5">
    <a href="/about" class="btn btn-primary px-4 py-2 transition-scale">Learn More About Us</a>
  </div>
</div>

<style>
  :root {
    --light-card-bg: #ffffff;
    --dark-card-bg: #000000; /* Set dark mode background to black */
    --text-light: #f1f1f1;
    --text-muted: #bcbcbc;
  }

  .careers-page .job-card {
    border-radius: 1rem;
    background-color: var(--light-card-bg); /* Default to white for light mode */
    transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
  }

  body.dark-mode .careers-page .job-card {
    background-color: var(--dark-card-bg); /* Black background for dark mode */
  }

  .hover-lift:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 24px rgba(0, 0, 0, 0.12);
  }

  .fade-in {
    animation: fadeInUp 0.9s ease forwards;
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(40px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .transition-card {
    transition: all 0.3s ease-in-out;
  }

  .transition-scale {
    transition: transform 0.2s ease;
  }

  .transition-scale:hover {
    transform: scale(1.05);
  }

  .card-title {
    font-weight: 600;
    font-size: 1.25rem;
  }

  .alert-success {
    font-size: 0.95rem;
    background-color: rgba(25, 135, 84, 0.1);
    border: none;
  }

  body.dark-mode .alert-success {
    background-color: rgba(25, 135, 84, 0.15);
  }

  body.dark-mode .card-text,
  body.dark-mode .lead,
  body.dark-mode .text-light-emphasis,
  body.dark-mode .alert-success {
    color: var(--text-muted) !important;
  }

  /* Custom color overrides for card titles and paragraphs */
  .card-title {
    color: red !important;
  }

  .card-text {
    color: yellow !important;
  }

  /* Red and yellow color scheme for the rest of the page */
  body {
    color: red; /* Default text color */
  }

  h3, p, .alert-success {
    color: yellow !important;
  }

  /* For dark mode specific changes */
  body.dark-mode .card-title {
    color: red !important;
  }

  body.dark-mode .card-text {
    color: yellow !important;
  }

  /* Ensure card background is black in dark mode */
  body.dark-mode .job-card {
    background-color: var(--dark-card-bg) !important; /* Force dark background for cards */
  }
</style>
