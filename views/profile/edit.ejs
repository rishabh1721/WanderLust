<% layout('layouts/boilerplate') %>

<style>
  .edit-container {
    max-width: 500px;
    margin: 4rem auto;
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 10px 25px var(--shadow-color);
    animation: fadeIn 0.6s ease-in-out;
  }
  .edit-container h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
    background: var(--gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
  .form-group {
    margin-bottom: 1.5rem;
  }
  .form-label {
    font-weight: 600;
    display: block;
    margin-bottom: .3rem;
    color: var(--text-color);
  }
  .form-control, .form-control-file {
    width: 100%;
    padding: .6rem;
    border-radius: 6px;
    border: 1px solid #ccc;
    transition: border 0.3s ease;
  }
  .form-control:focus, .form-control-file:focus {
    border-color: var(--primary);
    box-shadow: 0 0 5px rgba(93, 63, 211, 0.5);
  }
  .btn-submit {
    background: var(--gradient);
    color: white;
    padding: .7rem 1.5rem;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    display: block;
    width: 100%;
    transition: transform .2s, opacity .2s;
    cursor: pointer;
  }
  .btn-submit:hover {
    opacity: .9;
    transform: scale(1.02);
  }
  .current-avatar {
    display: block;
    margin: 0 auto 1.5rem;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 4px 12px var(--shadow-color);
  }
  .alert {
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1rem;
  }
  .alert-danger {
    background-color: #f8d7da;
    color: #721c24;
  }
  .alert-success {
    background-color: #d4edda;
    color: #155724;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(30px); }
    to   { opacity: 1; transform: translateY(0); }
  }
</style>

<div class="edit-container">
  <h2>Edit Your Profile</h2>

  <% if (error && error.length) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <% if (success && success.length) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <!-- Show current avatar -->
  <img src="<%= user.avatar || '/images/default-avatar.png' %>" 
       alt="Your Avatar" class="current-avatar">

  <form action="/profile/edit?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="username" class="form-label">Username</label>
      <input type="text" id="username" name="username" 
             class="form-control" value="<%= user.username %>" required>
    </div>
    <div class="form-group">
      <label for="email" class="form-label">Email</label>
      <input type="email" id="email" name="email" 
             class="form-control" value="<%= user.email %>" required>
    </div>
    <div class="form-group">
      <label for="avatar" class="form-label">Change Avatar</label>
      <input type="file" id="avatar" name="avatar" 
             class="form-control-file" accept="image/*">
    </div>
    <button type="submit" class="btn-submit">Update Profile</button>
  </form>
</div>
